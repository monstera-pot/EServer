<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EDIT SPATI</title>
  </head>
  <body>
    <nav><%- include('./partials/navbar.ejs'); %></nav>
    <h1>EDITING <%= spati.title %></h1>
    <form action="/spatis/<%= spati._id %>?_method=PUT" method="POST">
      <ul>
        <li>
          <label for="title">Name :</label>
          <input name="title" id="title" type="text" value="<%=spati.title%>" />
        </li>
        <li>
          <label for="address">Address :</label>
          <input
            name="address"
            id="address"
            type="text"
            value="<%=spati.address%>"
          />
        </li>
        <li>
          <label for="PLZ">PLZ :</label>
          <input name="PLZ" id="PLZ" type="number" value="<%=spati.PLZ%>" />
        </li>
        <li>
          <label for="viertel">Viertel: </label>
          <select id="viertel" name="viertel">
          <% for ( const viertel of viertels ) { %>
            <option name="viertel" value="<%=viertel%>" <%=spati.viertel === viertel ? "selected" : "" %> > 
                <%= viertel %>
            </option> 
          <% } %>
          </select>
        </li>
        <li>
          <legend>Is it accessible?</legend>
          <input
            type="checkbox"
            id="isAccessible"
            name="isAccessible"
            value="true"
          />
          <label for="isAccessible">Yes</label>
        </li>
      </ul>
      <button type="submit">Edit</button>
      <a href="/spatis/<%=spati._id %>">Cancel</a>
    </form>
  </body>
</html>
